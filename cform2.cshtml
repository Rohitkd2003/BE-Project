@model BE_PROJECT_1.Models.placementcompany

@{
    Layout = null;
}
@{
    ViewBag.Title = "Create Placement Company";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Placement Application Form</title>

    <!-- Add Bootstrap for layout -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <style>
        body {
            background-color: #f4f7fa;
            font-family: 'Arial', sans-serif;
            color: #333;
        }

        .container {
            max-width: 800px;
            margin-top: 50px;
            padding: 30px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #004085;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-weight: bold;
            text-align: center;
            margin-bottom: 20px;
        }

        .form-group label {
            font-weight: bold;
        }

        .form-control {
            border-radius: 5px;
            border: 1px solid #ccc;
        }

            .form-control:focus {
                border-color: #004085;
                box-shadow: 0 0 5px rgba(0, 64, 133, 0.3);
            }

        .btn-submit {
            background-color: #004085;
            color: white;
            border-radius: 5px;
            padding: 10px 20px;
            font-size: 1.1em;
            width: 100%;
            cursor: pointer;
            border: none;
        }

            .btn-submit:hover {
                background-color: #0056b3;
            }

        .form-row .col {
            margin-bottom: 20px;
        }

        .form-group textarea {
            height: 150px;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm())
    {

        <div class="container">
            <h2>Placement Application Form</h2>

            <form action="~/jobform1/Student" method="POST" enctype="multipart/form-data">

                <!-- Personal Information -->
                <div class="form-group">
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Enter your full name" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Enter your email address" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Phone)
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @placeholder = "Enter your phone number" })
                    @Html.ValidationMessageFor(m => m.Phone)
                </div>

                <!-- Aadhar and PAN Information -->
                <div class="form-row">
                    <div class="col">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Aadhar)
                            @Html.TextBoxFor(m => m.Aadhar, new { @class = "form-control", @placeholder = "Enter your Aadhar number" })
                            @Html.ValidationMessageFor(m => m.Aadhar)
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            @Html.LabelFor(m => m.PAN)
                            @Html.TextBoxFor(m => m.PAN, new { @class = "form-control", @placeholder = "Enter your PAN number" })
                            @Html.ValidationMessageFor(m => m.PAN)
                        </div>
                    </div>
                </div>

                <!-- Address Information -->
                <div class="form-group">
                    @Html.LabelFor(m => m.Address)
                    @Html.TextAreaFor(m => m.Address, new { @class = "form-control", rows = 4, @placeholder = "Enter your address" })
                    @Html.ValidationMessageFor(m => m.Address)
                </div>

                <!-- Father's Occupation and Family Income -->
                <div class="form-row">
                    <div class="col">
                        <div class="form-group">
                            @Html.LabelFor(m => m.FathersOccupation)
                            @Html.TextBoxFor(m => m.FathersOccupation, new { @class = "form-control", @placeholder = "Enter father's occupation" })
                            @Html.ValidationMessageFor(m => m.FathersOccupation)
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            @Html.LabelFor(m => m.FamilyIncome)
                            @Html.TextBoxFor(m => m.FamilyIncome, new { @class = "form-control", @placeholder = "Enter annual family income" })
                            @Html.ValidationMessageFor(m => m.FamilyIncome)
                        </div>
                    </div>
                </div>

                <!-- Educational Information -->
                <div class="form-row">
                    <div class="col">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Degree)
                            @Html.TextBoxFor(m => m.Degree, new { @class = "form-control", @placeholder = "Enter your degree" })
                            @Html.ValidationMessageFor(m => m.Degree)
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            @Html.LabelFor(m => m.University)
                            @Html.TextBoxFor(m => m.University, new { @class = "form-control", @placeholder = "Enter your university name" })
                            @Html.ValidationMessageFor(m => m.University)
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col">
                        <div class="form-group">
                            @Html.LabelFor(m => m.CGPA)
                            @Html.TextBoxFor(m => m.CGPA, new { @class = "form-control", @placeholder = "Enter your CGPA" })
                            @Html.ValidationMessageFor(m => m.CGPA)
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Backlogs)
                            @Html.TextBoxFor(m => m.Backlogs, new { @class = "form-control", @placeholder = "Enter number of backlogs" })
                            @Html.ValidationMessageFor(m => m.Backlogs)
                        </div>
                    </div>
                </div>
                    
                <!-- Skills -->
                <div class="form-group">
                    @Html.LabelFor(m => m.Skills)
                    @Html.TextAreaFor(m => m.Skills, new { @class = "form-control", rows = 4, @placeholder = "Enter your skills" })
                    @Html.ValidationMessageFor(m => m.Skills)
                </div>
                <div class="form-group">
                     <label for="ResumePath" class="col-sm-3 col-form-label">Resume</label>
                    <div class="col-sm-9">
                    <input type="file" name="ResumePath" class="form-control-file" accept=".pdf, .doc, .docx" />    
                    </div>
                </div>
                <!-- Experience -->
                <div class="form-group">
                    @Html.LabelFor(m => m.Experience)
                    @Html.TextAreaFor(m => m.Experience, new { @class = "form-control", rows = 4, @placeholder = "Describe your experience" })
                    @Html.ValidationMessageFor(m => m.Experience)
                </div>

                <!-- Terms and Conditions -->
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="terms" name="terms" required>
                    <label class="form-check-label" for="terms">I accept the <a href="#">terms and conditions</a></label>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn-submit">Submit Application</button>
            </form>
        </div>

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    }
</body>


</html>
