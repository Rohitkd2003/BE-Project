        /* Container for the whole study materials section */
#study-material {
    margin-top: 20px;
    padding: 20px;
    background-color: #f9f9f9;
    border-radius: 8px;
}

/* Style for the study links section */
.study-links {
    margin-bottom: 30px;
}

/* Heading style for each section */
.study-links h3 {
    font-size: 24px;
    color: #333;
    border-bottom: 2px solid #007BFF;
    padding-bottom: 5px;
    margin-bottom: 15px;
}

/* Style for the strong tags */
.study-links strong {
    font-size: 18px;
    color: #007BFF;
}

/* Style for the unordered lists */
.study-links ul {
    padding-left: 20px;
    list-style-type: none;
}

.study-links li {
    margin: 5px 0;
}

/* Style for the links */
.study-links a {
    color: #007BFF;
    text-decoration: none;
    font-size: 16px;
}

/* Change link color on hover */
.study-links a:hover {
    color: #0056b3;
    text-decoration: underline;
}

        .inline-black-text {
            color: black !important;
            display: inline !important;
        }


/* Responsive design */
@@media (max-width: 768px) {
    #study-material {
        padding: 15px;
    }

    .study-links h3 {
        font-size: 20px;
    }

    .study-links strong {
