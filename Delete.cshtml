@model IEnumerable<BE_PROJECT_1.Models.Company>

@{
    Layout = null;
    ViewBag.Title = "Delete Placement Company";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete Placement Company</title>

    <!-- Add Bootstrap for layout -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <style>
        body {
            background-color: #f4f7fa;
            font-family: 'Arial', sans-serif;
            color: #333;
        }

        .container {
            max-width: 800px;
            margin-top: 50px;
            padding: 30px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #004085;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-weight: bold;
            text-align: center;
            margin-bottom: 20px;
        }

        .btn-submit {
            background-color: #004085;
            color: white;
            border-radius: 5px;
            padding: 10px 20px;
            font-size: 1.1em;
            width: 100%;
            cursor: pointer;
            border: none;
        }

            .btn-submit:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Select Company to Delete</h2>

        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.Label("Company Name", new { @class = "control-label" })
                @Html.DropDownList("companyName", new SelectList(Model, "Name", "Name"), "Select Company", new { @class = "form-control" })
                @Html.ValidationMessage("companyName", "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn-submit">Delete Company</button>
        }

        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
        {
            <div class="alert alert-danger mt-3">
                @ViewData["ErrorMessage"]
            </div>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
