@model BE_PROJECT_1.Models.Company

@{
    Layout = null; // You can use an appropriate layout instead
    ViewBag.Title = "Add Company";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Company</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Add New Company</h2>
        @using (Html.BeginForm("Create", "CompanyAdd", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.Name, "Company Name", new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Enter company name" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MinCgpa, "Minimum CGPA", new { @class = "control-label" })
                @Html.TextBoxFor(model => model.MinCgpa, new { @class = "form-control", placeholder = "Enter minimum CGPA" })
                @Html.ValidationMessageFor(model => model.MinCgpa, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MaxBacklogs, "Maximum Backlogs", new { @class = "control-label" })
                @Html.TextBoxFor(model => model.MaxBacklogs, new { @class = "form-control", placeholder = "Enter maximum backlogs allowed" })
                @Html.ValidationMessageFor(model => model.MaxBacklogs, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RequiredSkills, "Required Skills", new { @class = "control-label" })
                @Html.TextBoxFor(model => model.RequiredSkills, new { @class = "form-control", placeholder = "Enter required skills" })
                @Html.ValidationMessageFor(model => model.RequiredSkills, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        }
    </div>
</body>
</html>
