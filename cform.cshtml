@model BE_PROJECT_1.Models.placementcompany

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Placement Application Form</title>

    <!-- Add Bootstrap for layout -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f4f7fa; /* Light background */
            font-family: 'Arial', sans-serif;
            color: #333;
        }

        .container {
            max-width: 800px;
            margin-top: 50px;
            padding: 30px;
            background-color: #ffffff; /* White background for form */
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Soft shadow */
        }

        h2 {
            color: #004085;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-weight: bold;
            text-align: center;
            margin-bottom: 20px;
        }

        .form-group label {
            font-weight: bold;
        }

        .form-control {
            border-radius: 5px;
            border: 1px solid #ccc;
        }

            .form-control:focus {
                border-color: #004085;
                box-shadow: 0 0 5px rgba(0, 64, 133, 0.3);
            }

        .btn-submit {
            background-color: #004085;
            color: white;
            border-radius: 5px;
            padding: 10px 20px;
            font-size: 1.1em;
            width: 100%;
            cursor: pointer;
            border: none;
        }

            .btn-submit:hover {
                background-color: #0056b3;
            }

        .form-row .col {
            margin-bottom: 20px;
        }

        .form-group textarea {
            height: 150px;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2>Placement Application Form</h2>

        <!-- Form to collect student information -->
        <form action="~/Student/SubmitApplication" method="POST" enctype="multipart/form-data">
            <!-- Personal Information -->
            <div class="form-group">
                <label for="name">Full Name</label>
                <input type="text" class="form-control" id="name" name="name" required placeholder="Enter your full name">
            </div>

            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" class="form-control" id="email" name="email" required placeholder="Enter your email">
            </div>

            <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="tel" class="form-control" id="phone" name="phone" required placeholder="Enter your phone number">
            </div>

            <!-- Aadhar and PAN Information -->
            <div class="form-row">
                <div class="col">
                    <div class="form-group">
                        <label for="aadhar">Aadhar Number</label>
                        <input type="text" class="form-control" id="aadhar" name="aadhar" required placeholder="Enter your Aadhar number">
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="pan">PAN Number</label>
                        <input type="text" class="form-control" id="pan" name="pan" required placeholder="Enter your PAN number">
                    </div>
                </div>
            </div>

            <!-- Address Information -->
            <div class="form-group">
                <label for="address">Permanent Address</label>
                <textarea class="form-control" id="address" name="address" required placeholder="Enter your permanent address"></textarea>
            </div>

            <!-- Father's Occupation and Family Income -->
            <div class="form-row">
                <div class="col">
                    <div class="form-group">
                        <label for="fathersOccupation">Father's Occupation</label>
                        <input type="text" class="form-control" id="fathersOccupation" name="fathersOccupation" required placeholder="Enter father's occupation">
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="familyIncome">Family Income</label>
                        <input type="number" class="form-control" id="familyIncome" name="familyIncome" required placeholder="Enter family income">
                    </div>
                </div>
            </div>

            <!-- Educational Information -->
            <div class="form-row">
                <div class="col">
                    <div class="form-group">
                        <label for="degree">Degree</label>
                        <input type="text" class="form-control" id="degree" name="degree" required placeholder="Your degree">
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="university">University</label>
                        <input type="text" class="form-control" id="university" name="university" required placeholder="Your university">
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="col">
                    <div class="form-group">
                        <label for="cgpa">CGPA</label>
                        <input type="number" step="0.01" class="form-control" id="cgpa" name="cgpa" required placeholder="Enter your CGPA">
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="backlogs">Backlogs</label>
                        <input type="number" class="form-control" id="backlogs" name="backlogs" required placeholder="Enter number of backlogs">
                    </div>
                </div>
            </div>

            <!-- Skills -->
            <div class="form-group">
                <label for="skills">Skills</label>
                <textarea class="form-control" id="skills" name="skills" required placeholder="Enter your skills (e.g., Java, Python, Web Development)"></textarea>
            </div>

            <!-- Experience -->
            <div class="form-group">
                <label for="experience">Experience (if any)</label>
                <textarea class="form-control" id="experience" name="experience" placeholder="Enter your work experience or internships (optional)"></textarea>
            </div>

            <!-- Upload Resume -->
            <div class="form-group">
                <label for="resume">Upload Resume</label>
                <input type="file" class="form-control-file" id="resume" name="resume" required>
            </div>

            <!-- Terms and Conditions -->
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="terms" name="terms" required>
                <label class="form-check-label" for="terms">I accept the <a href="#">terms and conditions</a></label>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn-submit">Submit Application</button>
        </form>
    </div>

    <!-- Add Bootstrap JS (Optional for modal, popups, etc.) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
