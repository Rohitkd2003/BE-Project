@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <style>
        /* Main Body Style */
        body {
            background-color: #f4f4f4;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            overflow-y: auto;
        }

        /* Container Style */
        .container {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            padding: 2em;
            max-width: 400px;
            width: 90%;
            margin: 1em;
            text-align: center;
        }

        /* Heading Style */
        h1 {
            color: #333;
            margin-bottom: 1em;
            font-size: 1.8em;
        }

        /* Form and Input Styles */
        label {
            display: block;
            margin-bottom: 0.5em;
            font-weight: bold;
            color: #333;
        }

        input[type="text"],
        input[type="submit"] {
            padding: 0.75em;
            border-radius: 5px;
            border: 1px solid #ddd;
            width: 100%;
            box-sizing: border-box;
            margin-bottom: 1em;
        }

        input[type="submit"] {
            background-color: #007bff;
            color: white;
            cursor: pointer;
            font-size: 1.1em;
            transition: background-color 0.3s;
        }

            input[type="submit"]:hover {
                background-color: #0056b3;
            }

        /* Messages */
        .message {
            color: #d9534f; /* Red for errors */
            margin-top: 1em;
            font-size: 1.1em;
        }

        /* Emoji Styling */
        .emoji {
            font-size: 1.5em;
            vertical-align: middle;
            margin-left: 0.3em;
        }

        /* Additional Spacing */
        .container p {
            margin-top: 1.5em;
            font-size: 1em;
        }

        .container a {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }

            .container a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Forgot Your Password? <span class="emoji">🔑</span></h1>
        @using (Html.BeginForm())
        {
            <label for="email">Enter Your Email Address <span class="emoji">📧</span></label>
            @Html.TextBox("Email_Address", null, new { id = "email", placeholder = "Enter your email" })
            <input type="submit" value="Submit" />
        }
        <div class="message">@ViewBag.msg</div>
        <p>
            Remembered your password? <a href="/Student/Login">Click Here <span class="emoji">🔒</span></a> to login
        </p>
    </div>
</body>
</html>
