@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CGPA</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .form-container {
            max-width: 600px;
            margin: 50px auto;
            background-color: white;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-group label {
            font-weight: 500;
        }

        .form-control {
            border-radius: 5px;
            padding: 10px;
            margin-bottom: 15px;
        }

        .btn-primary {
            background-color: #004085;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .text-center {
            text-align: center;
        }

        /* Styling for form container on mobile */
        @@media (max-width: 768px) {
            .form-container {
                padding: 20px;
            }

            .form-control {
                font-size: 14px;
                padding: 8px;
            }

            .btn-primary {
                width: 100%;
                padding: 12px;
            }
        }
    </style>
</head>
<body>
    <!-- Placement Search Form, hidden initially -->
    <div class="form-container" id="placementFormContainer">
        @using (Html.BeginForm("GetPlacementOpportunities", "Company", FormMethod.Post))
        {
            <div class="form-group">
                <label for="cgpa">CGPA/SGPA:</label>
                <input type="number" step="0.01" name="studentCgpa" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="backlogs">Backlogs:</label>
                <input type="number" name="studentBacklogs" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="skills">Skills (comma-separated):</label>
                <input type="text" name="studentSkills" class="form-control" />
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Find Companies</button>
            </div>
        }
    </div>
</body>
</html>
