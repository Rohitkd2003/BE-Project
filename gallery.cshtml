@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gallery</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .gallery {
            background-color: #fff;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

            .gallery h1 {
                color: #004d99;
                font-size: 36px;
                margin-bottom: 20px;
                text-align: center;
            }

        .gallery-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 15px;
        }

        .gallery-item {
            position: relative;
            overflow: hidden;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            cursor: pointer;
            transition: transform 0.3s ease;
        }

            .gallery-item:hover {
                transform: scale(1.05);
            }

            .gallery-item img {
                width: 100%;
                height: auto;
                display: block;
            }

            .gallery-item .caption {
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100%;
                background: rgba(0, 0, 0, 0.5);
                color: #fff;
                text-align: center;
                padding: 10px;
                opacity: 0;
                transition: opacity 0.3s ease;
            }

            .gallery-item:hover .caption {
                opacity: 1;
            }

        (max-width: 768px) {
            .gallery-grid

        {
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        }
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="gallery">
            <h1>Gallery</h1>
            <div class="gallery-grid">
                <div class="gallery-item">
                    <img src="/Content/Gallery1.jpg" alt="Gallery Image 1">
                    <div class="caption">Campus Event</div>
                </div>

                <div class="gallery-item">
                    <img src="/Content/Gallery2.jpg" alt="Gallery Image 2">
                    <div class="caption">Student Activities</div>
                </div>

                <div class="gallery-item">
                    <img src="/Content/Gallery3.jpg" alt="Gallery Image 3">
                    <div class="caption">Graduation Ceremony</div>
                </div>

                <div class="gallery-item">
                    <img src="/Content/Gallery4.jpg" alt="Gallery Image 4">
                    <div class="caption">Research Presentation</div>
                </div>

                <!-- Add more gallery items as needed -->
            </div>
        </div>
    </div>

</body>
</html>
